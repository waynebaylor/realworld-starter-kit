{
  "compilerOptions": {
    "jsx": "react",
    "outDir": "./dist/",
    "sourceMap": true,
    "strict": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "module": "es6",
    "moduleResolution": "node",
    "target": "es5",
    "allowJs": true,
    "lib": ["esnext", "dom"],
    "downlevelIteration": true,
    "esModuleInterop": true
  },
  "include": ["./src/**/*"]
}
